@model WedstrijdSysteem.Models.ClubTeamViewmodel
@{
    ViewData["Title"] = "New Match";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="NewMatchReportAdded">
                    <h4>Create a new team.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Club"></label>
                        <input asp-for="Club" class="form-control" />
                        <span asp-validation-for="Club" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Team"></label>
                        <input asp-for="Team" class="form-control" />
                        <span asp-validation-for="Team" class="text-danger"></span>
                        <button type="submit" class="button button-wide">Make</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>